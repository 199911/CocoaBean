class <%= @module_name %>.HelloViewController extends CB.ViewController {
    constructor() {
        super();
    }

    loadView() {
        this._view = new <%= @module_name %>.HelloView;
    }

    viewDidLoad() {
        ["mouse.up.inside", "touch.up.inside"].each(eventType => {
            this.view.linkView.addTargetActionForControlEvents(this, "linkClicked", eventType);
        });
    }

    linkClicked(sender, event) {
        alert("Should go to CocoaBean website!");
    }
}
