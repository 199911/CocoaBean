<%= @module_name %>.HelloViewController = class extends CB.ViewController {
    constructor() {
        super();
    }

    loadView() {
        this._view = new <%= @module_name %>.HelloView;
    }

    viewDidLoad() {
        super.viewDidLoad();
        ["mouse.up.inside", "touch.up.inside"].each(eventType => {
            this.view.linkView.addTargetActionForControlEvents(this, "linkClicked", eventType);
        });
    }

    linkClicked(sender, event) {
        CB.Application.sharedApplication().openURL("https://github.com/cheunghy/CocoaBean");
    }
}
